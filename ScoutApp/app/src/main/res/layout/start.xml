<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Welcome to Scout App, Enter your scout ID and starting match number."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Scout ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/start"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Red 3 = 3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 1 = 4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 2 = 5"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView"
            android:id="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 3 = 6"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView9"
            android:layout_alignEnd="@+id/textView8"
            android:id="@+id/textView10"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/editText7" />

        <TextView
            android:text="Red 1 = 1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="75dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Red 2 = 2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="54dp"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:text="Starting Match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>